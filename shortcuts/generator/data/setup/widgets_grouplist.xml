<contents>
    <rules name="add_x">
        <rule>
            <condition>{item_use_as_widget}==True</condition>
            <condition>{item_submenulist_path}!=||{item_use_as_list}==True</condition>
            <value>1</value>
        </rule>
        <rule>
            <condition>True</condition>
            <value>0</value>
        </rule>
    </rules>
    <value name="grouplist_item_x">{item_x}</value>
    <value name="grouplist_refocus">SetFocus(300)</value>
    <value name="grouplist_widgets_only">False</value>
    <value name="grouplist_visible">String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})</value>
    <value name="grouplist_first_id">$MATH[{grouplist_item_x} * 1000 + 601]</value>
    <value name="grouplist_top_widget_id">$MATH[{grouplist_item_x} * 1000 + 497]</value>
    <value name="grouplist_bottom_widget_id">$MATH[{grouplist_item_x} * 1000 + 498]</value>
    <value name="grouplist_id">$MATH[{grouplist_item_x} * 1000 + 400]</value>
    <value name="grouplist_widgets_bump_id">$MATH[{grouplist_item_x} * 1000 + 401]</value>
</contents>