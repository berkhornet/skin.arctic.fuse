{
    "folder": "1080i",
    "output": "script-skinvariables-generator-includes.xml",
    "header": "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n<includes>",
    "footer": "</includes>",
    "buildv": "0.0.1",
    "skinid": "skin.arctic.fuse",
    "getnfo": {},
    "addnfo": {},
    "global": {
        "parts_visible": {"template": "True"}
    },
    "genxml": [
        {
            "list": [
                ["homemenu", {"window_id": "Home"}],
                ["1101menu", {"window_id": "1101"}],
                ["1102menu", {"window_id": "1102"}],
                ["1103menu", {"window_id": "1103"}],
                ["1104menu", {"window_id": "1104"}]
            ],
            "for_each": [
                {
                    "comments": "Static Mainmenu",
                    "template": "template_generator/parts_basic_include.xmltemplate",
                    "includes_name": "skinvariables-{item}-staticitems",
                    "includes_part": {"menu": "{item}", "for_each": [
                        {
                            "template": "template_generator/parts_menu_item.xmltemplate",
                            "parts_onclick": [{"condition": "{item_target}!=", "value": "ActivateWindow({item_target},{item_path},return)"}, "{item_path}"]
                        }
                    ]}
                },
                {
                    "comments": "Static Submenus",
                    "template": "template_generator/parts_basic_include.xmltemplate",
                    "includes_name": "skinvariables-{item}-submenu-staticitems",
                    "includes_part": {"menu": "{item}", "for_each": [
                        {
                            "menu": "{item_menu}", "item": "{item_x}", "mode": "submenu", "for_each": [
                                {
                                    "template": "template_generator/parts_menu_item.xmltemplate",
                                    "parts_visible": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})",
                                    "parts_onclick": [{"condition": "{item_target}!=", "value": "ActivateWindow({item_target},{item_path},return)"},"{item_path}"]
                                }
                            ]
                        }
                    ]}
                },
                {
                    "comments": "Dynamic Submenus",
                    "template": "template_generator/parts_basic_include.xmltemplate",
                    "includes_name": "skinvariables-{item}-submenu",
                    "includes_part": {"menu": "{item}", "for_each": [
                        {
                            "template": "template_generator/parts_submenu_standard.xmltemplate",
                            "parts_visible": {"template": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})"},
                            "condition": "{item_submenulist_path}=="
                        },
                        {
                            "jsonfile": "template_generator/setup_submenu_row.json",
                            "template": "template_generator/parts_submenu_dynamic.xmltemplate",
                            "parts_visible": {"template": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})"},
                            "condition": "{item_submenulist_path}!="
                        }
                    ]}
                },
                {
                    "comments": "Category Spotlights",
                    "template": "template_generator/parts_basic_include.xmltemplate",
                    "includes_name": "skinvariables-{item}-spotlight",
                    "includes_part": {"menu": "{item}", "for_each": [
                        {
                            "template": "template_generator/parts_widgets_spotlight.xmltemplate",
                            "condition": ["{item_spotlight_path}!=", "!Skin.HasSetting(Hub.{window_id}.DisableSubmenu)"],
                            "widget_sortorder": [
                                {
                                    "condition":"{item_spotlight_sortorder}==True",
                                    "value" : "descending"
                                },
                                "ascending"
                            ]
                        }
                    ]}
                },
                {
                    "comments": "Standard Widgets",
                    "template": "template_generator/parts_basic_include.xmltemplate",
                    "includes_name": "skinvariables-{item}-widgets",
                    "includes_part": {"menu": "{item}", "for_each": [
                        {
                            "comments": "Widget Group",
                            "template": "template_generator/parts_basic_content.xmltemplate",
                            "includes_name": "Hub_Menu_Group",
                            "includes_part": {
                                "template": "template_generator/parts_widgets_grouplist.xmltemplate",
                                "grouplist_widgets_only": "False",
                                "grouplist_visible": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})",
                                "widget_top_id": "$MATH[{item_x} * 1000 + 601]",
                                "widget_grouplist_id": "$MATH[{item_x} * 1000 + 400]",
                                "widget_refocus": "SetFocus(303)",
                                "all_content_adapative_widgets":
                                {
                                    "jsonfile": "template_generator/setup_widgets_row.json",
                                    "template": "template_generator/parts_widgets_row.xmltemplate",
                                    "widget_id": "$MATH[{item_x} * 1000 + 600 + 1]",
                                    "widget_group_id": "$MATH[{item_x} * 1000 + 700 + 1]",
                                    "widget_selector_id": "$MATH[{item_x} * 1000 + 419]",
                                    "widget_shortstack_id": "$MATH[{item_x} * 1000 + 800 + 1]",
                                    "widget_prev_id": "$MATH[{item_x} * 1000 + 600 + 1 - 1]",
                                    "widget_next_id": "$MATH[{item_x} * 1000 + 600 + 1 + 1]",
                                    "widget_nextnext_id": "$MATH[{item_x} * 1000 + 600 + 1 + 2]",
                                    "widget_nextnextnext_id": "$MATH[{item_x} * 1000 + 600 + 1 + 3]",
                                    "widget_altvisible": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})",
                                    "widget_path": "$INFO[Window.Property(Item.{item_x}302.SpecialFolderPath)]",
                                    "widget_label": "$INFO[Window.Property(Item.{item_x}302.SpecialFolderLabel)]",
                                    "condition": ["{item_use_as_widget}==True", "{item_submenulist_path}!=", "!Skin.HasSetting(Hubs.WidgetSelector)"]
                                },
                                "all_adapative_widgets": {"menu": "{item_menu}", "item": "{item_x}", "mode": "submenu", "condition": ["{item_use_as_widget}==True", "!Skin.HasSetting(Hubs.WidgetSelector)"], "for_each": [
                                    {
                                        "jsonfile": "template_generator/setup_widgets_row.json",
                                        "template": "template_generator/parts_widgets_row.xmltemplate",
                                        "widget_visible": "String.IsEqual(Container(302).ListItem.Property(guid),{item_guid})",
                                        "condition": ["{item_path}!="]
                                    }
                                ]},
                                "all_standard_widgets": {"menu": "{item_menu}", "item": "{item_x}", "mode": "widgets", "for_each": [
                                    {
                                        "jsonfile": "template_generator/setup_widgets_row.json",
                                        "template": "template_generator/parts_widgets_row.xmltemplate",
                                        "condition": "{item_path}!="
                                    }
                                ]},
                                "all_endrow_selector": {
                                    "comments": "Widget Selector",
                                    "template": "template_generator/parts_endrow_dynamic.xmltemplate",
                                    "condition": "Skin.HasSetting(Hubs.WidgetSelector)",
                                    "endrow_visible": "String.IsEqual(Container(300).ListItem.Property(guid),{item_guid})",
                                    "all_standard_widget_items": {"menu": "{item_menu}", "item": "{item_x}", "mode": "widgets", "for_each": [
                                        {
                                            "template": "template_generator/parts_endrow_item.xmltemplate",
                                            "condition": "{item_path}!=",
                                            "parts_onclick": [{"condition": "{item_target}!=", "value": "ActivateWindow({item_target},{item_path},return)"}, "{item_path}"],
                                            "parts_visible": "!Integer.IsEqual(Container($MATH[{parent_item_x} * 1000 + 600 + {item_x} + 1]).NumItems,0) | Container($MATH[{parent_item_x} * 1000 + 600 + {item_x} + 1]).IsUpdating"
                                        }
                                    ]}
                                }
                            }
                        }
                    ]}
                }
            ]
        },
        {
            "comments": "Static Power Main Menu",
            "template": "template_generator/parts_basic_include.xmltemplate",
            "includes_name": "skinvariables-powermainmenu-staticitems",
            "includes_part": {"menu": "powermainmenu", "for_each": [
                {
                    "template": "template_generator/parts_dialog_item.xmltemplate",
                    "condition": ["{item_disabled}!=True", "{item_label}!="],
                    "parts_onclick": [{"condition": "{item_target}!=", "value": "ActivateWindow({item_target},{item_path},return)"}, "{item_path}"],
                    "item_label": [
                        {"condition": "{item_label}==$LOCALIZE[12600]", "value": "$INFO[Weather.Temperature, • ,]"},
                        {"condition": "{item_label}==$LOCALIZE[8]", "value": "$INFO[Weather.Temperature, • ,]"},
                        "{item_label}"
                    ],
                    "item_icon": [
                        {"condition": "{item_label}==$LOCALIZE[12600]", "value": "$INFO[Weather.FanartCode,resource://resource.images.weathericons.white/,.png]"},
                        {"condition": "{item_label}==$LOCALIZE[8]", "value": "$INFO[Weather.FanartCode,resource://resource.images.weathericons.white/,.png]"},
                        "{item_icon}"
                    ],
                    "item_bordersize": [
                        {"condition": "{item_label}==$LOCALIZE[12600]", "value": "21"},
                        {"condition": "{item_label}==$LOCALIZE[8]", "value": "21"},
                        "16"
                    ]
                }
            ]}
        },
        {
            "comments": "Static Power Side Menu",
            "template": "template_generator/parts_basic_include.xmltemplate",
            "includes_name": "skinvariables-powersidemenu-staticitems",
            "includes_part": {"menu": "powersidemenu", "for_each": [
                {
                    "template": "template_generator/parts_dialog_sideitem.xmltemplate",
                    "condition": ["{item_disabled}!=True", "{item_label}!="],
                    "parts_onclick": [{"condition": "{item_target}!=", "value": "ActivateWindow({item_target},{item_path},return)"}, "{item_path}"]
                }
            ]}
        },
        {
            "comments": "Static Sidemenu",
            "template": "template_generator/parts_basic_include.xmltemplate",
            "includes_name": "skinvariables-sidemenu-staticitems",
            "includes_part": {"menu": "sidemenu", "for_each": [
                {
                    "template": "template_generator/parts_menu_item.xmltemplate",
                    "parts_onclick": [{"condition": "{item_target}!=", "value": "ActivateWindow({item_target},{item_path},return)"}, "{item_path}"]
                }
            ]}
        },
        {
            "comments": "Static Sidemenu Button",
            "template": "template_generator/parts_basic_include.xmltemplate",
            "includes_name": "skinvariables-sidemenu-staticbutton",
            "includes_part": {"menu": "sidemenu", "for_each": [
                {
                    "template": "template_generator/parts_menu_buttonitem.xmltemplate",
                    "condition": "{item_x}==0",
                    "parts_onclick": [{"condition": "{item_target}!=", "value": "ActivateWindow({item_target},{item_path},return)"}, "{item_path}"]
                }
            ]}
        },
        {
            "comments": "Home Widgets Only",
            "template": "template_generator/parts_basic_include.xmltemplate",
            "includes_name": "skinvariables-homemenu-widgetsonly",
            "includes_part": {"menu": "sidemenu", "for_each": [
                {
                    "comments": "Widget Group",
                    "template": "template_generator/parts_basic_content.xmltemplate",
                    "includes_name": "Hub_Menu_Group",
                    "includes_part": {
                        "template": "template_generator/parts_widgets_grouplist.xmltemplate",
                        "window_id": "Home",
                        "widget_top_id": "$MATH[{item_x} * 1000 + 601]",
                        "widget_grouplist_id": "$MATH[{item_x} * 1000 + 400]",
                        "widget_refocus": "SetFocus(303)",
                        "grouplist_widgets_only": "Skin.HasSetting(Hub.Home.DisableSubmenu)",
                        "grouplist_visible": "String.IsEqual(Container(303).ListItem.Property(guid),{item_guid})",
                        "all_standard_widgets": {"menu": "{item_menu}", "item": "{item_x}", "mode": "widgets", "for_each": [
                            {
                                "jsonfile": "template_generator/setup_widgets_row.json",
                                "template": "template_generator/parts_widgets_row.xmltemplate",
                                "condition": "{item_path}!="
                            }
                        ]},
                        "all_endrow_selector": {
                            "comments": "Widget Selector",
                            "template": "template_generator/parts_endrow_dynamic.xmltemplate",
                            "condition": "Skin.HasSetting(Hubs.WidgetSelector)",
                            "endrow_visible": "String.IsEqual(Container(303).ListItem.Property(guid),{item_guid})",
                            "all_standard_widget_items": {"menu": "{item_menu}", "item": "{item_x}", "mode": "widgets", "for_each": [
                                {
                                    "template": "template_generator/parts_endrow_item.xmltemplate",
                                    "condition": "{item_path}!=",
                                    "parts_onclick": [{"condition": "{item_target}!=", "value": "ActivateWindow({item_target},{item_path},return)"}, "{item_path}"],
                                    "parts_visible": "!Integer.IsEqual(Container($MATH[{parent_item_x} * 1000 + 600 + {item_x} + 1]).NumItems,0) | Container($MATH[{parent_item_x} * 1000 + 600 + {item_x} + 1]).IsUpdating"
                                }
                            ]}
                        }
                    }
                }
            ]}
        },
        {
            "comments": "Search Menu Widgets",
            "template": "template_generator/parts_basic_include.xmltemplate",
            "includes_name": "skinvariables-searchmenu-widgets",
            "includes_part": {"menu": "searchmenu", "for_each": [
                {
                    "jsonfile": "template_generator/setup_search_row.json",
                    "template": "template_generator/parts_search_row.xmltemplate",
                    "condition": "{item_path}!="
                }]
            }
        },
        {
            "comments": "Search Menu Footers",
            "template": "template_generator/parts_basic_include.xmltemplate",
            "includes_name": "skinvariables-searchmenu-footers",
            "includes_part": {"menu": "searchmenu", "for_each": [
                {
                    "template": "template_generator/parts_search_footer_item.xmltemplate",
                    "widget_id": "$MATH[5000 + {item_x} + 1]",
                    "widget_icon": "{item_icon}",
                    "condition": "{item_path}!="
                }]
            }
        }
    ]
}



