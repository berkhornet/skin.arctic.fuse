<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">300</defaultcontrol>
    <onunload>ClearProperty(KeyboardStyle,Home)</onunload>
    <controls>
        <include condition="String.IsEmpty(Window(Home).Property(KeyboardStyle))">Keyboard_Standard</include>
        <include condition="String.IsEqual(Window(Home).Property(KeyboardStyle),Side)">Keyboard_SideMenu</include>
    </controls>
</window>
