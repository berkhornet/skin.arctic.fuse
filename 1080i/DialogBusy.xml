<?xml version="1.0" encoding="UTF-8"?>
<window>
    <zorder>999</zorder>
    <controls>

        <include content="Furniture_Busy">
            <param name="hasspinner">true</param>
            <param name="spinspinner">true</param>
            <param name="icon">special://skin/extras/icons/kodi.png</param>
            <param name="hasbackground">!Skin.HasSetting(ToastNotifications.Minimal)</param>
            <param name="haslabel">!Skin.HasSetting(ToastNotifications.Minimal)</param>
            <visible>!Window.IsActive(DialogVolumeBar.xml) | Player.Muted</visible>
            <include content="Object_Right" condition="Skin.HasSetting(ToastNotifications.Minimal)"><param name="right">0</param></include>
        </include>

        <include content="Object_Hidden_Button">
            <param name="control">progress</param>
            <param name="id">10</param>
        </include>
    </controls>
</window>
