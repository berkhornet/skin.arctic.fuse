<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1162">
    <visible>Player.HasVideo</visible>
    <visible>!Window.IsVisible(fullscreenvideo)</visible>
    <visible>Skin.HasSetting(Background.VideoDisabled)</visible>
    <controls>

        <include content="Dialog_Background_Blur">
            <param name="diffuse">diffuse/landscape_w720_h405.png</param>
            <animation type="WindowOpen" reversible="false">
                <effect type="slide" start="0,-48" end="0" center="auto" tween="back" easing="out" time="400" />
            </animation>
            <right>80</right>
            <top>80</top>
            <width>680</width>
            <height>426</height>
            <include content="Dialog_Overlay_Side_Panel">
                <!-- <param name="flipped">true</param> -->
            </include>

            <control type="group">
                <include content="Dimension_Padding">
                    <param name="pad">20</param>
                </include>
                <include content="Dialog_Outline_Box">
                    <param name="colordiffuse">dialog_bg_12</param>
                    <control type="image">
                        <texture border="20" colordiffuse="black">common/dialog.png</texture>
                    </control>
                    <control type="group">
                        <include content="Dimension_Padding">
                            <param name="pad">10</param>
                        </include>
                        <control type="videowindow" />
                        <control type="image">
                            <texture border="20" colordiffuse="black">common/selectbox.png</texture>
                        </control>
                    </control>
                </include>
            </control>
        </include>

    </controls>
</window>
