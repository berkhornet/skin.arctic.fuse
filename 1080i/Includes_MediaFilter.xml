    <include name="MediaFilter_Node">
        <control type="group">
            <visible>!$EXP[Exp_InfoDialogs]</visible>
            <visible>!$EXP[Exp_ScrollbarVisible_H]</visible>
            <visible>$EXP[Exp_MediaFilter_IsActive]</visible>
            <include content="Animation_Fade_In">
                <param name="delay">0</param>
                <param name="type">Visible</param>
            </include>
            <control type="group">
                <left>440</left>
                <right>880</right>
                <centerbottom>100</centerbottom>
                <height>view_pad</height>
                <include content="Object_Hidden_Button" condition="!Window.IsVisible(MyPlaylist.xml)">
                    <param name="id">9001</param>
                    <include>MediaFilter_Node_ClearAll</include>
                    <onfocus>SetFocus(19)</onfocus>
                </include>
                <!-- Edit Control -->
                <control type="edit" id="19">
                    <description>Filter</description>
                    <font>font_midi_black</font>
                    <textcolor>00ffffff</textcolor>
                    <selectedcolor>00ffffff</selectedcolor>
                    <disabledcolor>00ffffff</disabledcolor>
                    <focusedcolor>$VAR[ColorSelected]</focusedcolor>
                    <height>view_pad</height>
                    <textoffsetx>40</textoffsetx>
                    <align>left</align>
                    <onup condition="!Window.IsVisible(MyPlaylist.xml)">SetFocus(68)</onup>
                    <onup condition="Window.IsVisible(MyPlaylist.xml)">ClearProperty(MediaFilterBase)</onup>
                    <onup condition="Window.IsVisible(MyPlaylist.xml)">ClearProperty(MediaFilterWall)</onup>
                    <onup condition="Window.IsVisible(MyPlaylist.xml)">50</onup>
                    <!-- <ondown>$VAR[Action_Var_ToMediaScrollbar]</ondown> -->
                    <include>Action_View_Filter_OnDown</include>
                    <onleft>9009</onleft>
                    <onright>9004</onright>
                </control>
            </control>
            <control type="grouplist" id="9000">
                <right>300</right>
                <align>right</align>
                <centerbottom>100</centerbottom>
                <itemgap>0</itemgap>
                <orientation>horizontal</orientation>
                <height>160</height>
                <onleft>SetFocus(19)</onleft>
                <onback>68</onback>
                <onup condition="!Window.IsVisible(MyPlaylist.xml)">SetFocus(68)</onup>
                <onup condition="Window.IsVisible(MyPlaylist.xml)">ClearProperty(MediaFilterBase)</onup>
                <onup condition="Window.IsVisible(MyPlaylist.xml)">ClearProperty(MediaFilterWall)</onup>
                <onup condition="Window.IsVisible(MyPlaylist.xml)">50</onup>
                <!-- <ondown>$VAR[Action_Var_ToMediaScrollbar]</ondown> -->
                <include>Action_View_Filter_OnDown</include>

                <onleft>19</onleft>
                <onright>19</onright>

                <include condition="!Window.IsVisible(MyPlaylist.xml)">MediaFilter_Node_Buttons</include>
                <include condition="Window.IsVisible(MyPlaylist.xml)">MediaFilter_Node_PlaylistButtons</include>

                <control type="group" id="9999">
                    <width>40</width>
                </control>

            </control>
        </control>
    </include>

