<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1105">
    <defaultcontrol always="true">9501</defaultcontrol>
    <menucontrol>303</menucontrol>

    <onload>SetProperty(Backup.Blur.Original,$INFO[Window(Home).Property(TMDbHelper.ListItem.BlurImage.Original)])</onload>
    <onload>SetProperty(Backup.Blur,$INFO[Window(Home).Property(TMDbHelper.ListItem.BlurImage)])</onload>
    <onunload>SetProperty(TMDbHelper.ListItem.BlurImage.Original,$INFO[Backup.Blur.Original)],Home)</onunload>
    <onunload>SetProperty(TMDbHelper.ListItem.BlurImage,$INFO[Backup.Blur)],Home)</onunload>

    <include>Action_Blur_Onload</include>

    <onload condition="!String.IsEmpty(Window(Home).Property(CustomSearchTerm))">RunScript(script.skinvariables,set_editcontrol=9099,window_id=1105,setfocus=9501,text=$INFO[Window(Home).Property(CustomSearchTerm)])</onload>
    <onload condition="!String.IsEmpty(Window(Home).Property(CustomSearchTerm))">ClearProperty(CustomSearchTerm,Home)</onload>

    <onunload condition="!String.IsEmpty(Control.GetLabel(9099).index(1))">RunScript(script.skinvariables,add_skinstring_history=SearchHistory,value=$INFO[Control.GetLabel(9099).index(1)])</onunload>

    <controls>
        <include>Defs_TMDbHelper_Loader</include>
        <control type="group">
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
            <include>Background_Main</include>
            <include>Background_Transition</include>
        </control>

        <include>Search_View_Widgets_Group</include>

        <control type="group">
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
            <include>Home_Fade</include>
            <include>Search_Filter_Panel</include>
            <include>Search_View_Header_Icon</include>

            <include content="Home_Menu">
                <param name="onlist">9099</param>
            </include>

            <include content="View_Bumper">
                <param name="groupid">6000</param>
            </include>

            <include>View_Dialog_Plot</include>
        </control>

    </controls>
</window>
